@model WebSystem.ViewModel.CustomerVM
@{
    ViewBag.Title = "LoanSummary";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container">
    <div class="row">

        <div class="col-lg-12">

            <div class="panel panel-default">

                <div class="panel-heading headerFont">
                    <h3>Loan Summary Details</h3>
                </div>

                <div class="panel-body">
                    @using (Html.BeginForm("RefPerson", "Customer", FormMethod.Post, new { @class = "form-horizontal", @name = "NewAccountForm" }))
                    {
                        <div class="col-lg-3">
                            <br />
                            <label>Search By Account No</label>
                            @Html.TextBoxFor(m => m.AccRef.FullName, new { @class = "form-control", @id = "txtsearch" })
                            <br />
                            <br />
                            <label>Loan No</label>
                            @Html.TextBoxFor(m => m.AccRef.FullName, new { @class = "form-control", @id = "txtsearch" })
                        </div>
                        <div class="col-lg-9">
                                <div class="row">
                                        <div class="col-lg-12">
                                            <div class="panel panel-default">
                                                <div class="panel-heading">
                                                   Loan Payment Details
                                                </div>
                                                <div class="panel-body">
                                                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                                                        <thead>
                                                            <tr>
                                                                <th>Paid Amount</th>
                                                                <th>Balance</th>
                                                                <th>Interest Amount</th>
                                                                <th>Interest Balance</th>
                                                                <th>Deficit</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                          <tr class="odd gradeX">
                                                                <td>Trident</td>
                                                                <td>Internet Explorer</td>
                                                                <td>Win 95+</td>
                                                                <td>4</td>
                                                                <td>X</td>
                                                          </tr>
                                                          <tr class="odd gradeX">
                                                                <td>Trident</td>
                                                                <td>Internet Explorer</td>
                                                                <td>Win 95+</td>
                                                                <td>4</td>
                                                                <td>X</td>
                                                            </tr>
                                                        </tbody>
                                                    </table>
                                                 </div>
                                              </div>
                                          </div>
                                      </div>
                                   </div>
                          }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function() {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });
</script>

