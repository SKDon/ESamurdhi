@model WebSystem.ViewModel.CustomerVM
@{
    ViewBag.Title = "Transaction";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">

        <div class="col-lg-12">

            <div class="panel panel-default">

                <div class="panel-heading headerFont">
                    <h3>Transaction</h3>
                </div>

                <div class="panel-body">
                    @using (Html.BeginForm("RefPerson", "Customer", FormMethod.Post, new { @class = "form-horizontal", @name = "NewAccountForm" }))
                    {
                        <div class="col-lg-3">
                            <br />
                            <label>Account No</label>
                            @Html.TextBoxFor(m => m.AccRef.FullName, new { @class = "form-control", @id = "txtsearch" })
                            <br />
                            <br />
                            <label>Loan No</label>
                            @Html.TextBoxFor(m => m.AccRef.FullName, new { @class = "form-control", @id = "txtsearch" })
                        </div>
                        <div class="col-lg-9">
                            <br />
                            <br />
                            <!--Month-->
                            <div class="form-group">
                                <label class="control-label col-sm-2 TxtColor">Month</label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(m => m.AccRef.FullName, new { @class = "form-control", @id = "txtsearch" })
                                </div>
                            </div>

                            <!--Paid Amount-->
                            <div class="form-group">
                                <label class="control-label col-sm-2 TxtColor">Amount</label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(m => m.AccRef.FullName, new { @class = "form-control", @id = "txtsearch" })
                                </div>
                            </div>
                            <!--Paid Amount-->
                            <div class="form-group">
                                <label class="control-label col-sm-2 TxtColor">Paid Interest Amount</label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(m => m.AccRef.FullName, new { @class = "form-control", @id = "txtsearch" })
                                </div>
                            </div>

                        </div>
                        <div class="col-md-12">
                            @Html.Partial("btn_panel")
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        Transaction Details
                                    </div>
                                    <div class="panel-body">
                                        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                                            <thead>
                                                <tr>
                                                    <th>Date</th>
                                                    <th>Month</th>
                                                    <th>Paid Amount</th>
                                                    <th>Paid Interest</th>
                                                    <th>This Month Payment</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr class="odd gradeX">
                                                    <td>Trident</td>
                                                    <td>Internet Explorer</td>
                                                    <td>Win 95+</td>
                                                    <td>4</td>
                                                    <td>X</td>
                                                </tr>
                                                <tr class="odd gradeX">
                                                    <td>Trident</td>
                                                    <td>Internet Explorer</td>
                                                    <td>Win 95+</td>
                                                    <td>4</td>
                                                    <td>X</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>

                    }
                </div>
            </div>
        </div>


    </div>

</div>